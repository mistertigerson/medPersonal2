<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.profileFragment.ProfileFragment"
    >

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        style="@style/title"
        android:text="Настройки"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/people_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logotransparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings" />

    <TextView
        android:id="@+id/tv_username"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="132dp"
        android:text="Name"
        android:hint="Имя"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/people_icon"
        app:layout_constraintStart_toEndOf="@id/people_icon"
        app:layout_constraintTop_toTopOf="@+id/people_icon" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/images"
        app:layout_constraintStart_toStartOf="@+id/people_icon"
        app:layout_constraintTop_toBottomOf="@id/people_icon" />

    <TextView
        android:id="@+id/tv_secondName"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_margin="20dp"
        android:layout_marginTop="68dp"
        android:text="Фамилия"
        android:hint="Фамилия"
        android:textAlignment="center"
        android:textColor="#2B6CA6"
        app:layout_constraintBottom_toBottomOf="@+id/user_icon"
        app:layout_constraintStart_toEndOf="@id/user_icon"
        app:layout_constraintTop_toTopOf="@+id/user_icon" />

    <ImageView
        android:id="@+id/parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/kiss"
        app:layout_constraintStart_toStartOf="@+id/user_icon"
        app:layout_constraintTop_toBottomOf="@id/user_icon" />

    <TextView
        android:id="@+id/tv_lastName"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_secondName"
        android:layout_margin="20dp"
        android:text="Отчество"
        android:hint="Отчество"
        android:textAlignment="center"
        android:textColor="#2B6CA6"
        app:layout_constraintBottom_toBottomOf="@+id/parent"
        app:layout_constraintStart_toEndOf="@id/parent"
        app:layout_constraintTop_toTopOf="@+id/parent" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/phone"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@id/parent" />


    <TextView
        android:id="@+id/tv_phone"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lastName"
        android:layout_margin="20dp"
        android:text="номер телефона"
        android:hint="номер телефона"
        android:textAlignment="center"
        android:textColor="#2B6CA6"
        app:layout_constraintBottom_toBottomOf="@+id/phone"
        app:layout_constraintStart_toEndOf="@id/phone"
        app:layout_constraintTop_toTopOf="@+id/phone" />
    <ImageView
        android:id="@+id/specific"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/spec"
        app:layout_constraintStart_toStartOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@id/phone" />


    <TextView
        android:id="@+id/tv_specific"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lastName"
        android:layout_margin="20dp"
        android:text="должность"
        android:hint="должность"
        android:textAlignment="center"
        android:textColor="#2B6CA6"
        app:layout_constraintBottom_toBottomOf="@+id/specific"
        app:layout_constraintStart_toEndOf="@id/specific"
        app:layout_constraintTop_toTopOf="@+id/specific" />

    <ImageView
        android:id="@+id/iv_company"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/compa"
        app:layout_constraintStart_toStartOf="@+id/specific"
        app:layout_constraintTop_toBottomOf="@id/specific" />


    <TextView
        android:id="@+id/tv_company"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lastName"
        android:layout_margin="20dp"
        android:text="компания"
        android:hint="компания"
        android:textAlignment="center"
        android:textColor="#2B6CA6"
        app:layout_constraintBottom_toBottomOf="@+id/iv_company"
        app:layout_constraintStart_toEndOf="@id/iv_company"
        app:layout_constraintTop_toTopOf="@+id/iv_company" />

    <Button
        android:id="@+id/btn_addData"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="Изменить профиль"
        android:background="@drawable/styles"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_signOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.825"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_company"
        app:layout_constraintVertical_bias="0.798" />

    <Button
        android:id="@+id/btn_signOut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="выйти"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>